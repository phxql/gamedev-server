<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>GameDev - Server</display-name>

    <servlet>
        <servlet-name>gamedev</servlet-name>
        <servlet-class>edu.hm.gamedev.server.servlet.GameDevServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>gamedev</servlet-name>
        <url-pattern>/websocket</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
